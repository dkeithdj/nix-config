{
  "show_edit_predictions": true,
  "icon_theme": "Material Icon Theme",
  "agent": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "inline_alternatives": [
      {
        "provider": "copilot_chat",
        "model": "gpt-4.1"
      }
    ]
  },
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "nix": true,
    "tokyo-night": true,
    "catpuccin": true,
    "svelte": true,
    "lua": true,
    "emmet": true,
    "ruff": true
  },
  "buffer_font_fallbacks": [
    "Zed Plex Mono"
  ],
  "buffer_font_family": "FantasqueSansM Nerd Font Propo",
  "buffer_line_height": "standard",
  "load_direnv": "shell_hook",
  // Inlay hints preconfigured by Zed: Go, Rust, Typescript and Svelte
  // "inlay_hints": {
  //   "enabled": true,
  // },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": [
          "class",
          "className",
          "ngClass",
          "styles"
        ]
      }
    },
    "rust-analyzer": {
      "binary": {
        "path": "rust-analyzer"
      }
    },
    "nil": {
      "binary": {
        "path": "nil"
      },
      "settings": {
        "diagnostics": {
          "ignored": [
            "unused_binding"
          ]
        }
      }
    },
    "nixd": {
      "binary": {
        "path": "nixd"
      },
      "settings": {
        "diagnostic": {
          "suppress": [
            "semi-extra-with"
          ]
        }
      }
    },
    "emmet": {}
  },
  "format_on_save": "on",
  "languages": {
    // Refer https://zed.dev/docs/languages/javascript and https://zed.dev/docs/languages/typescript for more info
    "TSX": {
      "show_edit_predictions": true
    },
    "TypeScript": {
      // Refer https://github.com/jellydn/ts-inlay-hints for how to setup for Neovim and VSCode
      // "inlay_hints": {
      //   "enabled": true,
      //   "show_parameter_hints": false,
      //   "show_other_hints": false,
      //   "show_type_hints": true,
      // },
      "format_on_save": "prettier",
      "formatter": "prettier",
      "prettier": {
        "allowed": true
      }
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": false,
            "source.fixAll.ruff": false
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": [
        "pyright",
        "ruff"
      ]
    },
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt" // or "nixfmt"
        }
      }
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile.*"
    ],
    "JSON": [
      "json",
      "jsonc",
      "*.code-snippets"
    ]
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 6,
  "tab_bar": {
    "show": true
  },
  "tab_size": 2,
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "formatter": "language_server",
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "working_directory": "current_project_directory",
    "button": false,
    "dock": "bottom",
    "env": {
      "TERM": "xterm-256color",
    },
    "font_family": "FantasqueSansM Nerd Font Propo",
    "line_height": {
      "custom": 1.1
    },
    "option_as_meta": false,
    "shell": "system",
    "toolbar": {
      "title": true
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": false,
    "file_icons": true,
    "git_status": true,
    "auto_fold_dirs": false,
    "indent_size": 12,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "auto_update": false,
  "features": {
    "copilot": true,
    "edit_prediction_provider": "copilot"
  },
  "theme": "Tokyo Night",
  "ui_font_family": "FantasqueSansM Nerd Font Propo",
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 150,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "vertical_scroll_margin": 6
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "show_completions_on_input": true
}
