#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(find -L ~/Projects/blogs ~/Projects/work ~/Projects/web ~/Projects/school ~/Projects/nix ~/Projects -mindepth 1 -maxdepth 1 -type d | fzf) || return
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)

GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NORMAL='\033[0m'

if [[ "$(pwd)" == "$selected" ]]; then
  echo " üìÅ ${BLUE}already in${NORMAL} ${BOLD}$selected_name"
else
  echo " üìÅ ${GREEN}going to${NORMAL} ${BOLD}$selected_name"
  cd $selected
fi
