(defvar
  tap-time        150
  hold-time       200
  hold-time-slow  250
)

(defalias
  l_num    (layer-toggle num)
  l_sys1   (layer-toggle sys1)
  l_sys2   (layer-toggle sys2)

  ;; shifted keys
  _        S--
  !        S-1
  @        S-2
  #        S-3
  {        S-[
  $        S-4
  %        S-5
  ^        S-6
  }        S-]
  &        S-7
  *        S-8
  op       S-9
  cp       S-0
  til      S-grv
  ?        S-/
  pipe     S-\

  ;; homerow mods
  n        (tap-hold $tap-time $hold-time-slow n lctl)
  r        (tap-hold $tap-time $hold-time       r lalt)
  t        (tap-hold $tap-time $hold-time       t lsft)
  s        (tap-hold $tap-time $hold-time       s lmet)
  h        (tap-hold $tap-time $hold-time       h rmet)
  a        (tap-hold $tap-time $hold-time       a rsft)
  e        (tap-hold $tap-time $hold-time       e ralt)
  i        (tap-hold $tap-time $hold-time-slow  i rctl)

  ;; shortcuts
  cc       M-c
  cv       M-v
  cx       M-x
  cz       M-z
  ctb      C-tab
  cstb     C-S-tab

  lctl     (tap-hold $tap-time $hold-time esc lctl)
  fn       (tap-hold $tap-time $hold-time fn (layer-toggle fn))

  meh      (multi ctl alt sft)
  tmeh     (tap-hold $tap-time $hold-time spc @meh)

  sve     (macro S-; w ret)

  ;; chords
  c_del_f (chord del f)
  c_del_o (chord del o)
  c_del_u (chord del u)

  c_bspc_h (chord bspc h)
  c_bspc_a (chord bspc a)
  c_bspc_e (chord bspc e)

  c_ret_p  (chord ret p)
  c_ret_co (chord ret ,)
  c_ret_do (chord ret .)

  c_tab_l (chord tab l)
  c_tab_d (chord tab d)

  c_esc_r (chord esc r)
  c_esc_t (chord esc t)



)

(defchords del 15
  (f    ) f
  (  o  ) o
  (    u) u
  (f o  ) ;
  (  o u) del
)

(defchords bspc 15
  (h    ) @h
  (  a  ) @a
  (    e) @e
  (h a  ) '
  (  a e) bspc
)

(defchords ret 15
  (p    ) p
  (  ,  ) ,
  (    .) .
  (p ,  ) @sve
  (  , .) ret
)

(defchords tab 15
  (l  ) l
  (  d) d
  (l d) tab
)

(defchords esc 15
  (r  ) @r
  (  t) @t
  (r t) esc
)

