(defcfg
  process-unmapped-keys yes
;;  macos-dev-names-include (
;;   "Apple Internal Keyboard / Trackpad"
;; )
)

;; QWERTY to GRAPHITE
(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv   1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab   q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps  a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft  z    x    c    v    b    n    m    ,    .    /    rsft
  fn    lctl lalt lmet           spc            rmet ralt ◀   ▲  ▼  ▶
)

(deflayer graphite
  esc   🔅  🔆   mctl sls  dtn  dnd  ◀◀ ▶⏸  ▶▶  🔇  🔉  🔊
  grv   1    2    3    4    5    6    7    8    9    0    -    =    del
  tab   b    l    d    w    q    [    ;    f    o    u    j    '    bspc
  @lctl @n   @r   @t   @s   g    ]    y    @h   @a   @e   @i   ret
  lsft  x    m    c    v    z    /    k    p    ,    .    @mo2
  @fn   lctl lalt lmet           spc            @mo1 ralt ◀   ▲  ▼  ▶
)

(deflayer numlayer
  _     _    _    _    _    _    _    _    _    _    _    _    _
  _     _    _    _    _    _    _    _    _    _    _    _    _    _
  _     -    1    2    3    +    _    _    _    _    _    _    _    _
  _     [    4    5    6    ]    _    _   left down up   rght _
  _     7    8    9    0    grv  _    /    \    _    _   _
  _     _    _    _         _                   _    _   _    _   _   _
)

(deflayer symlayer
  _     _    _    _    _    _    _    _    _    _    _    _    _
  _     _    _    _    _    _    _    _    _    _    _    _    _    _
  _     @_   @!   @@   @#   =    _    _    _    _    _    _    _    _
  _     @{   @$   @%  @^   @}    _    _    _    _    _    _    _
  _     @&   @*   @op @cp  @til _    @?  @pipe _   _   _
  _     _    _    _         _                   _    _   _    _   _   _
)

(deflayer fn
  _     f1    f2    f3    f4    f5    f6    f7    f8    f9    f10   f11   f12
  _     _     _     _     _     _     _     _     _     _     _     _     _     _
  _     _     _     _     _     _     _     _     _     _     _     _     _     _
  _     _     _     _     _     _     _     _     ⤒     ⇞     ⇟     ⤓     _
  _     _     _     _     _     _     _     _     _     _     _     _
  _     _     _     _                 _                 _     _     ⤒    ⇞ ⇟    ⤓
)
(defvar
  tap-time 150
  hold-time 200
)

(defalias
  mo1 (layer-toggle numlayer)
  mo2 (layer-toggle symlayer)
  ;; shifted keys
  _ S--
  ! S-1
  @ S-2
  # S-3
  { S-[
  $ S-4
  % S-5
  ^ S-6
  } S-]
  & S-7
  * S-8
  op S-9
  cp S-0
  til S-grv
  ? S-/
  pipe S-\
  n (tap-hold $tap-time $hold-time n lctl)
  r (tap-hold $tap-time $hold-time r lalt)
  t (tap-hold $tap-time $hold-time t lsft)
  s (tap-hold $tap-time $hold-time s lmet)
  h (tap-hold $tap-time $hold-time h rmet)
  a (tap-hold $tap-time $hold-time a rsft)
  e (tap-hold $tap-time $hold-time e ralt)
  i (tap-hold $tap-time $hold-time i rctl)
  lctl (tap-hold $tap-time $hold-time esc lctl)
  fn (tap-hold $tap-time $hold-time fn (layer-toggle fn))
)
