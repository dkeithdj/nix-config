(defchords del 15
  (  o  ) o
  (    u) u
  (  o u) del
)

(defchords ret 15
  (p    ) p
  (  ,  ) @,
  (    .) @.
  (p ,  ) @sve
  (  , .) ret
)

(defchords tab 15
  (l  ) l
  (  d) d
  (l d) tab
)

(defchords esc 15
  (r  ) r
  (  t) t
  (r t) esc
)

(deftemplate rhc (chordgroupname timeout k1 k2 alias1 alias2 output)
  (defalias
    $alias1 (chord $chordgroupname $k1)
    $alias2 (chord $chordgroupname $k2)
  )
  (defchords $chordgroupname $timeout
    ($k1    ) $k1
    (    $k2) $k2
    ($k1 $k2) $output
  )
)
